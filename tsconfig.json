{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "declaration": false,
    "rootDir": "src",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
